<h1>Display your Pirate here</h1>
<h2>Pirate Name: <%= @pirate.name %></h2>
<h3>Pirate Weight: <%= @pirate.weight %></h3>
<h3>Pirate Height: <%= @pirate.height %></h3>


<h2>Display your first ship here</h2>
<h1>Ship 1</h1>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
        <% if index == 0 %>
                <p>Name: <%= ship.name %></p>
                <p>Type: <%= ship.type %></p>
                <p>Booty: <%= ship.booty %></p>
        <% end %>
    <% end %>
</div>


<h2>Display your second ship here</h2>
<h1>Ship 2</h1>
<% @ships.each.with_index do |ship, index| %>
    <div class="ship">
        <% if index == 1 %>
                <p>Name: <%= ship.name %></p>
                <p>Type: <%= ship.type %></p>
                <p>Booty: <%= ship.booty %></p>
        <% end %>
    <% end %>
</div>